<%=
  f.govuk_text_area component.id.to_sym,
    label: { text: input_title },
    hint: {
      data: { "fb-default-text" => default_text('hint'), "fb-node" => "hint" },
      text: component.hint
    },
    name: "answers[#{component.name}]",
    max_chars: component.validation['max_length'],
    max_words: component.validation['max_word'],
    threshold: component.validation_threshold,
    rows: component.rows
%>
