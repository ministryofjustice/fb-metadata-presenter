<% if @page.body %>
  <editable-content id="<%= "page[body]" %>"
                          class="fb-editable"
                          type="content"
                          default-content="<%= default_text('body') %>"
                          content="<%= @page.body %>"
                          data-fb-content-id="<%= "page[body]" %>">
    <%= to_html(@page.body) %>
  </editable-content>
<%- end %>
