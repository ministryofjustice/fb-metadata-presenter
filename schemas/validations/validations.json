      "title": "Within next",
      "description": "Date which user input must be before - eg. 1y, 4Mm, 2w, 100d",
      "type": "object",
      "properties": {
        "amount": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "enum": [
            "years",
            "months",
            "weeks",
            "days"
          ]
        }
      },
      "required": [
        "amount",
        "unit"
      ]
    },
    "errors_date_within_next": {
      "title": "Error messages for ‘Within next’",
      "allOf": [
        {
          "$ref": "#/definitions/error_strings"
        }
      ]
    },
    "date_within_last": {
      "title": "Within last",
      "description": "Date which user input must be before - eg. 1y, 4Mm, 2w, 100d",
      "type": "object",
      "properties": {
        "amount": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "enum": [
            "years",
            "months",
            "weeks",
            "days"
          ]
        }
      },
      "required": [
        "amount",
        "unit"
      ]
