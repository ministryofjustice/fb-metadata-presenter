      }
    },
    "max_size": {
      "title": "Maximum size",
      "description": "Maximum file size as human readable string or bytes",
      "type": "string"
    },
    "virus_scan": {
      "title": "Virus scan",
      "description": "Scanning of files for viruses",
      "type": "boolean"
    },
